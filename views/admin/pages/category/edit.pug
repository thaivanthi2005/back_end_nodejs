extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/category-option.pug

block main
  h1.mb-4 Thêm mới danh mục sản phẩm
  +alert-error(success, error)
  form(
    action=`${prefixAdmin}/category/edit/${products._id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
    id="form-create-product"
  )

    //- Tiêu đề
    .form-group
      label(for="title") Tiêu đề
      input.form-control(
        type="text"
        id="title"
        name="title"
        value=products.title
      )

    //- parent_id
    .form-group
      label(for="parent_id") Danh mục cha
      select.form-control(
        id="parent_id"
        name="parent_id"
      )
        - const parentId = products.parent_id ? products.parent_id.toString() : ''
        option(value="" selected=(parentId === '')) -- Danh mục gốc --
        +categoryOptions(product_category, parentId)
    //- Mô tả
    .form-group
      label(for="my-expressjs-tinymce-app") Mô tả
      textarea.form-control(  
        id="my-expressjs-tinymce-app"
        name="description"
        rows="5")= products.description

    //- Ảnh
    div(class="form-group" 
    upload-image)
      label(for="thumbnail") Ảnh
      input.form-control-file(
        type="file"
        id="thumbnail"
        accept="image/*"
        name="thumbnail"
        upload-image-input
      )
      img(
        src=""
        alt="Preview"
        width="200"
        upload-image-preview
      )
      button.btn.btn-secondary(type="button" upload-image-delete) Xóa ảnh

    //- Vị trí
    .form-group
      label(for="position") Vị trí
      input.form-control(
        type="number"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
      )
    .form-group
      label Trạng thái
      .form-check.form-check-inline
        input.form-check-input(
          type="radio"
          id="statusActive"
          name="status"
          value="InStock"
          checked = true ? products.status == 'InStock' : false
        )
        label.form-check-label(for="statusActive") Hoạt động

      .form-check.form-check-inline
        input.form-check-input(
          type="radio"
          id="statusInactive"
          name="status"
          value="OutStock"
          checked = true ? products.status == 'OutStock' : false
        )
        label.form-check-label(for="statusInactive") Dừng hoạt động
    //- Submit
    .form-group
      button.btn.btn-primary(type="submit") Sửa danh mục sản phẩm
